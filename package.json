    "@fontsource/source-sans-pro": "^4.5.11",
    "@fontsource/source-serif-pro": "^4.5.9",
    "@fontsource/stix-two-text": "^4.5.16",
    "@replit/codemirror-vim": "^6.1.0",
    "astro": "^4.0.8",
    "codemirror": "^6.0.1",
    "marked": "^11.1.1",
    "tailwindcss": "^3.4.0"
  },
