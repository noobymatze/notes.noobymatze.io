{
  "name": "notes",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "post": "mkdir -p /src/content/posts/$(date +%Y/%m)",
